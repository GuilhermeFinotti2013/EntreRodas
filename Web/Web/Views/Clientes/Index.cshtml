@model IEnumerable<Web.Models.Clientes>

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.MenuAtual = "Clientes";
}
<h1 class="h2">Clientes</h1>

<p>
    <a href="/Clientes/Create" class="btn btn-primary btn-success"><span class="glyphicon glyphicon-plus"></span> Novo cliente</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Celular)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EhWhats)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome) @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Celular)
                </td>
                <td>
                    @if (item.EhWhats == "S")
                    {
                        <p>Sim</p>
                    }
                    else
                    {
                        <p>Não</p>
                    }
                </td>
                <td>
                    <a href="/Clientes/Details/@item.Id" class="btn btn-primary btn-success">
                        <span class="glyphicon glyphicon-search"></span>
                        Visualizar
                    </a>
                    <a href="/Clientes/Edit/@item.Id" class="btn btn-primary btn-primary">
                        <span class="glyphicon glyphicon-pencil"></span>
                        Editar
                    </a>
                    <a href="/Clientes/Delete/@item.Id" class="btn btn-primary btn-danger">
                        <span class="glyphicon glyphicon-trash"></span>
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

    </div>