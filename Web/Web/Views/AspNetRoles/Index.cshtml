@model IEnumerable<Web.Models.AspNetRoles>

@{
    ViewBag.Title = "Perfis de  usuários";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.MenuAtual = "PerfilDeUsuario";
}

<h2>Perfils de  usuários</h2>

<p>
    <a href="/AspNetRoles/Create" class="btn btn-primary btn-success"><span class="glyphicon glyphicon-plus"></span> Novo perfil</a>
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Descrição")
        </th>
        <th>Ações</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href="/AspNetRoles/Edit/@item.Id" class="btn btn-primary btn-primary">
                    <span class="glyphicon glyphicon-pencil"></span>
                    Editar
                </a>
                <a href="/AspNetRoles/Delete/@item.Id" class="btn btn-primary btn-danger">
                    <span class="glyphicon glyphicon-trash"></span>
                    Excluir
                </a>
            </td>
        </tr>
    }

</table>
