@model Web.Models.AbrirOrdensServicosViewModel

@{
    ViewBag.Title = "Nova ordem de Serviço";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.MenuAtual = "OrdensServicos";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>OrdensServicos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ClienteId, "ClienteId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClienteId", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Veículo:")
            <div class="col-md-10">
                @Html.DropDownList("cmd_veiculo", new SelectList(Enumerable.Empty<SelectListItem>(), "Id", "Modelo"))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ClienteId').change(function () {
                var idVeiculo = $('#ClienteId').val();
                if (idVeiculo != '') {
                    $.post('@Url.Action("ObterVeiculos", "OndensServicos")', { 'idCliente': idVeiculo }, function (data) {
                        if (data.length > 0) {
                            for (var i = 0; i < data.length; i++) {
                                $('#cmd_veiculo').append('<option value="' + data[i].Id + '">' + data[i].Modelo + '</option>');
                            }
                        }
                    });
/*                    $.post(Url.("ObterVeiculos", "OndensServicos"), { 'idCliente': idVeiculo }, function (data) {
                        /*if (data.length > 0) {
                            for (var i = 0; i < data.length; i++) {
                                $('#cmd_veiculo').append('<option value="' + data[i].Id + '">' + data[i].Modelo + '</option>');
                            }
                        }
                    });*/
                }
            });
        });
    </script>
}