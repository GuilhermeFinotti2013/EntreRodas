@model IEnumerable<Web.Models.MarcasCarros>

@{
    ViewBag.Title = "Fabrícantes de carros ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.MenuAtual = "MarcasCarros";
}

<h2>Fabrícantes de carros</h2>

<p>
    <a href="/MarcasCarros/Create" class="btn btn-primary btn-success"><span class="glyphicon glyphicon-plus"></span> Nova fabricante</a>
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>Ações</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            <a href="/MarcasCarros/Edit/@item.Id" class="btn btn-primary btn-primary">
                <span class="glyphicon glyphicon-plus"></span> 
                Editar
            </a>
            <a href="/MarcasCarros/Delete/@item.Id" class="btn btn-primary btn-danger">
                <span class="glyphicon glyphicon-plus"></span> 
                Excluir
            </a>
        </td>
    </tr>
}

</table>
