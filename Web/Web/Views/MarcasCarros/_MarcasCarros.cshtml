@model IEnumerable<Web.Models.MarcasCarros>
<div id="divListaMarcasCarros">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>Ações</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a href="/MarcasCarros/Edit/@item.Id" class="btn btn-primary btn-primary">
                        <span class="glyphicon glyphicon-pencil"></span>
                        Editar
                    </a>
                    <a href="/MarcasCarros/Delete/@item.Id" class="btn btn-primary btn-danger">
                        <span class="glyphicon glyphicon-trash"></span>
                        Excluir
                    </a>
                </td>
            </tr>
        }

    </table>
</div>